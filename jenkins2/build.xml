<?xml version="1.0" encoding="UTF-8"?>
<project name="jenkins2" default="run">
    <!-- =================================================================== -->
    <!-- 变量设置  -->
    <!-- =================================================================== -->
    <!-- 源代码src路径 -->
    <property name="sr.com.path" value="src/Com"/>
    <!-- 单元测试代码路径 -->
    <property name="test.path" value="src/Com"/>
    <!-- 生成报告junit4.xml路径 -->
    <property name="report.path" value="report"/>
    <target name="compile">
        <javac srcdir="${sr.com.path}" destdir="${test.path}" includeantruntime="true"/>
    </target>   
	 <target name="run" depends="compile">      
	  <java classname="Com.ComplexCalculation">       
	     <classpath>          
	     <pathelement path="src/Com"/>        
	    </classpath>      
	  </java>   
	  </target> 
</project>